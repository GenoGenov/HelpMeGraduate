@using KnowledgeSpreadSystem.Web.Areas.Administration.Models
@model CourseModuleViewModel

<h3>Create new module</h3>


<div class="form-group">
    @Html.LabelFor(x => x.Name)
    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(x => x.Name)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Description)
    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Description)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Started)
    @Html.EditorFor(m => m.Started, new { @class = "form-control" ,name="Started"})
    @Html.ValidationMessageFor(x => x.Started)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.End)
    @Html.EditorFor(m => m.End, new { @class = "form-control" ,name="End"})
    @Html.ValidationMessageFor(x => x.End)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Lecturer)
    @Html.EditorFor(m => m.Lecturer, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Lecturer)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Moderator)
    @{ Html.RenderAction("AllUsersDropDown", "Users"); }
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Course)
    @{ Html.RenderAction("AllCoursesDropDown", "Courses"); }
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


