@using System.Collections
@using Kendo.Mvc.UI
@using KnowledgeSpreadSystem.Web.Areas.Administration.Models
@model CourseViewModel

<h3>Create new course</h3>


<div class="form-group">
    @Html.LabelFor(x => x.Name)
    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(x => x.Name)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Description)
    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Description)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Year)
    @Html.EditorFor(m => m.Year, new {htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(x => x.Year)
</div>

<div class="form-group">
    @Html.EditorFor(x=>x.Faculty)
    @Html.ValidationMessageFor(x => x.Faculty)
</div>

