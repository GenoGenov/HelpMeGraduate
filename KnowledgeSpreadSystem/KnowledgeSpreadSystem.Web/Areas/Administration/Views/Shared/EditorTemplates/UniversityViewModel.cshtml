@model KnowledgeSpreadSystem.Web.Areas.Administration.ViewModels.University.UniversityViewModel

<h3>Create new university</h3>

        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.About)
            @Html.TextAreaFor(m => m.About, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.About)
        </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }