@model KnowledgeSpreadSystem.Web.Areas.Administration.ViewModels.Insight.InsightViewModel

<legend>Create insight</legend>
@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
<div class="form-group">
    @Html.LabelFor(x => x.Content)
    @Html.TextAreaFor(x => x.Content, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Content)
</div>
<div class="form-group">
    @Html.EditorFor(x => x.Course)
    @Html.ValidationMessageFor(x => x.Course)
</div>
<div class="form-group">
    @Html.EditorFor(x => x.Module) (optional)
    @Html.ValidationMessageFor(x => x.Module)
</div>

