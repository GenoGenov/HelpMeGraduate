@using Kendo.Mvc.UI
@using KnowledgeSpreadSystem.Web.Areas.Administration.Models
<div class="col-md-12">
    @(Html.Kendo()
          .Grid<CourseViewModel>()
          .Name("grid-courses")
          .ToolBar(tool =>
                       {
                           tool.Create();
                       })
          .Columns(columns =>
                       {
                           columns.Bound(model => model.Name);
                           columns.Bound(model => model.Description);
                           columns.Bound(model => model.Year);
                           columns.Bound(model => model.Faculty).ClientTemplate("#= Faculty.Name #");
                           columns.Bound(model => model.Faculty.University).ClientTemplate("#= Faculty.University.Name #");
                           columns.Command(command =>
                                               {
                                                   command.Edit();
                                                   command.Destroy();
                                               });
                       })

          .Pageable(page =>
                        {
                            page.PreviousNext(true);
                            page.Numeric(true);
                        })
          .Sortable(sort =>
                        {
                            sort.AllowUnsort(true);
                            sort.SortMode(GridSortMode.SingleColumn);
                        })
          .Groupable()
          .Filterable()
          .Resizable(resize => resize.Columns(true))
          .Navigatable()
          .Editable(edit =>
                        {
                            edit.Mode(GridEditMode.PopUp);
                        })
          .DataSource(data => data.Ajax()
                                  .Model(m => { m.Id(b => b.Id);
                                                  m.Field(x => x.Faculty).DefaultValue(new FacultyViewModel(){University = new UniversityViewModel()});
                                  })
                                  .PageSize(10)
                                  .ServerOperation(true)
                                          .Create("CreateCourse", "Courses")
                                  .Read("AllCourses", "Courses")
                                          .Update("UpdateCourse", "Courses")
                                          .Destroy("DeleteCourse", "Courses")
                                  .Events(events =>
                                      {
                                          events.RequestEnd("onRequestEnd");
                                          events.Error("handleError");
                                      }))

          .Resizable(x => { x.Columns(true); }))
</div>