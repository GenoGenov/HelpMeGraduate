@using KnowledgeSpreadSystem.Web.Helpers
@if (Request.IsAuthenticated)
{
    <li>@Html.ActionLink("Universities", "All", "Universities", new { area = "" }, new { @class=@Url.MakeActive("Universities")})</li>
    <li>@Html.ActionLink("Calendar", "Index", "Calendar", null, new { @class = @Url.MakeActive("Calendar") })</li>
    <li>@Html.ActionLink("My Enrolment", "Index", "Enrolment", new { area = "" }, new { @class = @Url.MakeActive("Enrolment") })</li>
}

@if (HttpContext.Current.User.IsInRole("Administrator"))
{
    <li>@Html.ActionLink("Administration", "Index", "Home", new { area = "Administration" }, new { @class = @Url.MakeActive("Administration", null) })</li>
}