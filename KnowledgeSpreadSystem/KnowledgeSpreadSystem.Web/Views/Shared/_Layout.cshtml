<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Help Me Graduate</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles",false)

</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HelpMeGraduate", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{ Html.RenderAction("UniversityLinks","Menu"); }
                  
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @if (TempData["notification"] != null)
        {
            <div class="notificator" data-msg="@TempData["notification"]" data-type="@TempData["type"]"></div>
        }
        @if (Request.IsAuthenticated)
        {
            <div class="row">
                <div class="col-md-10">@RenderBody()</div>
                <div class="col-md-2" id="chat">
                    <div class="panel panel-default">
                        <div class="panel-heading text-center">
                            <h2>Chat</h2>

                        </div>
                        <div class="panel-body">

                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            @RenderBody()
        }
        
        
        <hr />
        <footer class="text-center" id="main-footer">
            <strong>
                &copy; @DateTime.Now.Year - <a href="http://telerikacademy.com">Telerik Academy</a>. Author: Geno Genov
            </strong>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/noty")
    @RenderSection("scripts", required: false)
    
</body>
</html>
